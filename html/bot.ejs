<%- include('ek/header', {bot, user, path}) %>
<div class="info">
<div class="post post-single">
                  <br>
                        <div class="post-meta">
                            <div align="center"><span class="yapimci"><i class="fa fa-clock-o"></i> <strong>Yapımcı: </strong><%=bot.ayar.fetch(`botlar.${id}.sahip`)%></span><a style="color:#fff"> | </a>
                            <span class="oy"><a class="oy"><i class="fa fa-star"></i> <%=bot.ayar.fetch(`botlar.${id}.oy`) || 0%> Oy</a></span>
                        <% if(bot.ayar.has(`botlar.${id}.sertifika`) === true) { %>
                            | <span><img src="https://cdn3.iconfinder.com/data/icons/study-education-9/96/success_medal_done-512.png" width="20px" height="20px"> <a style="color:darkorange">Sertifikalı</a></span>
                         <% } %>
                          </div>
                        </div><br>
                        <div class="post-thumbnail">
                            <div align="center"><img style="border-radius:50%;"src="<%=bot.ayar.fetch(`botlar.${id}.avatar`)%>"
                                width="200" height="200" class="botavatar"><h3 class="botisim"><%=bot.ayar.fetch(`botlar.${id}.isim`)%></h3><h5 class="kisaaciklama"><%=bot.ayar.fetch(`botlar.${id}.kisaaciklama`)%></h5></div>                 
        <div align="center">
          <button class="ss"><%=bot.ayar.fetch(`botlar.${id}.prefix`)%></button>
          
      <%if (bot.ayar.has(`botlar.${id}.destek`)){%>
                 <a href="<%=bot.ayar.fetch(`botlar.${id}.destek`)%> "target="_blank" role="button"> <button class="ss">Destek Sunucusu</button></a>
            <%} %>
          
          <%if (bot.ayar.has(`botlar.${id}.site`)){%>
                 <a href="<%=bot.ayar.fetch(`botlar.${id}.site`)%> "target="_blank" role="button"> <button class="ss">Web Sitesi</button></a>
            <%} %>
          </div>
      <div align="center">                    
  <% if (!user) { %>
        <a href="/giris"><button class="ss">Oy vermek için hesabına giriş yapmalısın!<i class="fa fa-lock"></i></button></a>
                    <% } else { %>
        <a href="/bot/<%=id%>/oyver"><button id="oy" href="/bot/<%=id%>/oyver" class="ss" type="sumbit"><i aria-hidden="true"></i> Oy Ver</button></a>
                      <% } %><br>
            
          <a href="https://discordapp.com/oauth2/authorize?client_id=<%=id%>&scope=bot&permissions=8" target="_blank" role="button"><button class="ss"><i aria-hiddden="true"></i> Davet Et</button></a>
        <a href="/bot/<%=id%>/rapor"><button class="ss"><i aria-hidden="true"></i>Rapor Et</button></a>
        
          <% if (user) { %>
          <% if(bot.ayar.fetch(`botlar.${id}.sahipid`) === user.id) { %>
          <a href="/kullanici/<%=user.id%>/panel/<%=id%>/duzenle"><button class="ss"><i aria-hiddden="true"></i> Düzenle</button></a>
        <a href="/kullanici/<%=user.id%>/panel/<%=id%>/sil"><button class="ss"><i aria-hidden="true"></i> Sil</button></a>
          <% } %>
        <% } %>
                      
                </div>  
                          
                          
                            </div>
  <br>
  <div class="uzunaciklama" class="jimbotron" align="center"><br>
    <% if (bot.ayar.has(`botlar.${id}.uzunaciklama`) || bot.ayar.fetch(`botlar.${id}.uzunaciklama`) !== undefined || bot.ayar.fetch(`botlar.${id}.uzunaciklama`) !== null) { %>
<% var xx %>
<% for (var ii = 0; ii < bot.tags.length; ii++) { %>
  <% if(bot.ayar.fetch(`botlar.${id}.uzunaciklama`).includes(bot.tags[ii]) === false) {%>
    <% xx = false %>
 <% } %>
    <% if (bot.ayar.fetch(`botlar.${id}.uzunaciklama`).includes(bot.tags[ii]) === true) { %>
     <% x = true %>
    <% } %>
<% } %>

<% if (x === false) { %>
  <p><%=bot.ayar.fetch(`botlar.${id}.uzunaciklama`)%></p>
<% } else if (x === true) { %>
    <% let $ = bot.htmll.load(bot.ayar.fetch(`botlar.${id}.uzunaciklama`)) %>
  <%- $.html() %>
    <% } %>
    
    <% } else { %>
    <p>Bir Discord botu işte!</p>
    <% } %>
    
  <br></div>
        
    
        </div><br>
          <div class="post-actions">
                  <div class="post-tags">
                    <div align="center">
                      <%if(Array.isArray(bot.ayar.fetch(`botlar.${id}.etiket`)) === false) {%>
                      <span class="etiket btn-btn-default"><a><%=bot.ayar.fetch(`botlar.${id}.etiket`)%></a></span>
                      <% } else { %>
                      <% for(var xx = 0; xx < bot.ayar.fetch(`botlar.${id}.etiket`).length; xx++) {%>
                      <span class="etiket btn btn-default"><a><%=bot.ayar.fetch(`botlar.${id}.etiket`)[xx]%></a></span>
                    <% }%>
                      <% }%>
                    </div>
                   </div>
              </div>
      </div>
</div>


<style>
  .info{
  margin: 50px;
  margin-left: 20%;
  margin-top: -2%;
  }
  .jumbotron {
    background:transparent;
  }
  .ss{
            all: unset;
            background: transparent;
            border: 1px solid #222;
            padding: 0.5em 4em;
            border-radius: 10px;
            display: inline-block;
            position: relative;
            transition: all 300ms ease;
            color:#f8f8ff;
           margin: 5px;
  }
    .ss:hover{
      box-shadow: 0px 0px 10px #666;
  }
</style>